<h2>All cities:</h2>

<% if @cities.any? %>
  <ul>
    <% @cities.each do |city| %>
      <li><a href="/cities/<%= city.id %>"><%= city.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no cities to display.</p>
<% end %>

<form action="/cities" method="post">
  <div class="form-group">
    <label for="city_name">city name</label>
    <input id="n" name="city_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">add city</button>
</form>

<a href="/"> return to homepage </a> 

