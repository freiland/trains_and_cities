<h1> Make changes to <%= @city.name() %> </h1>

<h1>Update <%=@city.name() %></h1>

<form action="/cities/<%= @city.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">    <%#use patch in app.rb %>

  <label for="name">Rename city</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/cities/<%= @city.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete city</button>
</form>
<p><a href="/cities">Return to city list</a></p> 